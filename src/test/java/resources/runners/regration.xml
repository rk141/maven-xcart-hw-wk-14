<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="testsuite" verbose="1" >

    <groups>
        <run>
            <include name="regration"></include>
        </run>
    </groups>
    <listeners>
        <listener class-name="com.xcart.mobile.customlisteners.CustomListner"></listener>
        <listener class-name="org.uncommons.reportng.HTMLReporter"></listener>
        <listener class-name="org.uncommons.reportng.JUnitXMLReporter"></listener>
    </listeners>

    <test name="Regression Test" >
        <classes>
            <class name="com.xcart.mobile.homePage.TopMenuTest"></class>
            <class name="com.xcart.mobile.hotDeals.HotDealsTest"></class>
            <class name="com.xcart.mobile.shopping.ShoppingTest"></class>
        </classes>

    </test>
</suite>
